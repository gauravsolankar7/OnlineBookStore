@model List<OnlineBookStore.Models.Category>

<div class="card shadow border-0 mt-4 mb-5">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row pb-3">
            <div class="text-end">
                <a class="btn btn-primary" asp-controller="Category" asp-action="Create">
                    <i class="bi bi-plus-circle"></i> Add New Category
                </a>
            </div>
        </div>
        <table class="table table-striped table-bordered border border-1 border-light">
            <thead>
                <tr>
                    <th>Category Id</th>
                    <th>Category Name</th>
                    <th>Display Order</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model.OrderBy(u => u.DisplayOrder))
                    {
                        <tr>
                            <td>@category.Id</td>
                            <td>@category.Name</td>
                            <td>@category.DisplayOrder</td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a class="btn btn-primary mx-2" asp-area="" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a class="btn btn-danger" asp-area="" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
            </tbody>
        </table>
    </div>
</div>
