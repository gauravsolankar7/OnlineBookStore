@model List<Category>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-area="" asp-controller="Category" asp-action="Create">
                <i class="bi bi-plus-circle"></i> Add New Category
            </a>
        </div>
    </div>
<table class="table table-striped table-bordered border border-1 border-light">
    <thead>
        <tr>
            <th>Category Id</th>
            <th>Category Name</th>
            <th>Display Order</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var category in Model.OrderBy(u => u.DisplayOrder))
    {
        <tr>
            <td>@category.Id</td>
            <td>@category.Name</td>
            <td>@category.DisplayOrder</td>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a class="btn btn-primary mx-2" asp-area="" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a class="btn btn-danger" asp-area="" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>
</div>